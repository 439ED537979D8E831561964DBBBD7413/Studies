<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#C000"
    android:id="@+id/add_new_service_center_layout"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="20dp"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:layout_height="45dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_white"
                android:layout_centerInParent="true"
                android:text="Edit Service Center"/>
            <ImageView
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_back_arrow_white"
                android:layout_centerVertical="true"
                android:id="@+id/back_edit_service_center"
                android:layout_marginLeft="10dp"/>
        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_marginTop="40dp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="55dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/service_center_name_layout"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_margin="10dp"
                        android:textSize="10dp"
                        android:text="Service Center Name: "/>
                    <EditText
                        android:layout_width="match_parent"
                        android:textSize="10dp"
                        android:layout_marginRight="20dp"
                        android:id="@+id/edit_service_center_name"
                        android:layout_marginLeft="70dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_below="@+id/service_center_name_layout"
                    android:id="@+id/service_center_address_layout"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="10dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_margin="10dp"
                        android:text="Service Center Address: "/>
                    <EditText
                        android:layout_width="match_parent"
                        android:textSize="10dp"
                        android:layout_marginRight="20dp"
                        android:id="@+id/edit_service_center_address"
                        android:layout_marginLeft="70dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_below="@+id/service_center_address_layout"
                    android:id="@+id/service_center_contact_layout"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:textColor="@color/black"
                        android:layout_margin="10dp"
                        android:text="Service Center Contact: "/>
                    <EditText
                        android:layout_width="match_parent"
                        android:textSize="10dp"
                        android:inputType="phone"
                        android:layout_marginRight="20dp"
                        android:id="@+id/edit_service_center_contact"
                        android:layout_marginLeft="70dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_below="@+id/service_center_contact_layout"
                    android:id="@+id/service_center_open_timing_layout"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:textColor="@color/black"
                        android:layout_margin="10dp"
                        android:text="Service Center Opens At: "/>
                    <EditText
                        android:layout_width="match_parent"
                        android:textSize="10dp"
                        android:inputType="phone"
                        android:layout_marginRight="20dp"
                        android:id="@+id/edit_service_center_open_timing"
                        android:layout_marginLeft="70dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_below="@+id/service_center_open_timing_layout"
                    android:id="@+id/service_center_close_timing_layout"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="10dp"
                        android:layout_margin="10dp"
                        android:text="Service Center Closes At: "/>
                    <EditText
                        android:layout_width="match_parent"
                        android:textSize="10dp"
                        android:inputType="phone"
                        android:id="@+id/edit_service_center_close_timing"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="70dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_below="@+id/service_center_close_timing_layout"
                    android:id="@+id/service_center_brand_layout"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="10dp"
                        android:layout_margin="10dp"
                        android:text="Service Center Brand: "/>
                    <EditText
                        android:layout_width="match_parent"
                        android:textSize="10dp"
                        android:id="@+id/edit_service_center_brand_text"
                        android:layout_marginLeft="70dp"
                        android:layout_marginRight="20dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </RelativeLayout>
        </ScrollView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="bottom">
            <Button
                android:layout_width="125dp"
                android:layout_height="25dp"
                android:textSize="10dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:id="@+id/submit_edit_service_center_details"
                android:layout_centerVertical="true"
                android:textColor="@color/color_white"
                android:background="@drawable/shape"
                android:backgroundTint="@color/colorPrimary"
                android:textAllCaps="false"
                android:text="Update Details"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>