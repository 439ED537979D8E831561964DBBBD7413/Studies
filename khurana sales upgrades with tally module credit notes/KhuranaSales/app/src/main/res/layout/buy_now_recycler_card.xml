<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/card_view1"
        android:layout_below="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp"
        android:layout_margin="15dp"
        app:cardElevation="2dp"
        app:cardPreventCornerOverlap="false"
        app:contentPadding="0dp">

       <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
           <ImageView
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:src="@drawable/ic_delete"
               android:id="@+id/close"
               android:alpha="0.6"
               android:layout_alignParentRight="true"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:layout_toLeftOf="@+id/close"
            android:textColor="@color/black"
            android:id="@+id/desc1"
            android:layout_margin="15dp"/>
        <ImageView
            android:layout_width="35dp"
            android:id="@+id/im1"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:layout_below="@+id/desc1"
            android:background="@drawable/rupee1"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mrp"
                android:textColor="@color/black"
                android:layout_below="@+id/desc1"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:textSize="15dp"
                android:fontFamily="serif-monospace"
                android:text="12000/-"
                />
            <ImageView
                android:layout_width="35dp"
                android:id="@+id/im2"
                android:layout_height="35dp"
                android:layout_margin="10dp"
                android:layout_below="@+id/im1"
                android:background="@drawable/rupee1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mop"
                android:layout_below="@+id/mrp"
                android:textColor="@color/blue"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="38dp"
                android:textStyle="bold"
                android:textSize="15dp"
                android:fontFamily="serif-monospace"
                android:text="12000/-"

                />
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="10dp"
                android:layout_below="@+id/im2"
                android:id="@+id/ks_price_image"
                android:background="@drawable/rupee1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ks_price"
                android:textColor="@color/red"
                android:layout_below="@+id/mop"
                android:layout_marginLeft="80dp"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_marginTop="36dp"
                android:fontFamily="serif-monospace"
                android:text="12000/-"

                />
         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@+id/ks_price"
            android:layout_alignParentRight="true"
             android:layout_marginTop="25dp"
             android:weightSum="3"
             android:layout_marginRight="15dp"
             android:layout_marginBottom="15dp"

             >
             <ImageButton
                 android:layout_width="35dp"

                 android:layout_height="35dp"
                 android:id="@+id/sub"
                 android:layout_weight="1"
                 android:layout_marginRight="25dp"
                 android:background="@drawable/sub"
                 />
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textStyle="bold"
                 android:layout_weight="1"
                 android:layout_marginRight="25dp"
                 android:layout_gravity="center"
                 android:textColor="@color/black"
                 android:fontFamily="serif-monospace"
                 android:layout_centerInParent="true"
                 android:text="12"
                 android:id="@+id/stock"
                 />
             <ImageButton
                 android:layout_weight="1"
                 android:layout_width="35dp"
                 android:layout_height="35dp"
                 android:layout_alignParentRight="true"
                 android:id="@+id/add"
                 android:background="@drawable/add"
                 />
         </LinearLayout>
           <ImageView
               android:layout_width="match_parent"
               android:layout_height="265dp"
               android:id="@+id/out_of_stock"
               android:visibility="invisible"
               android:src="@drawable/out_of_stock"
               android:background="#7000"
               android:alpha="0.6"
               />
           <ImageView
               android:layout_width="35dp"
               android:layout_marginLeft="25dp"
               android:layout_marginTop="220dp"
               android:layout_height="35dp"
               android:id="@+id/batch_numbers"
               android:src="@drawable/imei"/>
       </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>