<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#C000"
    android:visibility="invisible"
    android:clickable="true"
    android:id="@+id/edit_pre_booking_product_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Edit Pre-booking Product"
                android:textSize="10dp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/ic_delete"
                android:id="@+id/back_edit_product"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="55dp"
            android:layout_marginTop="50dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/product_name_layout"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product Name : "
                    android:textSize="10dp"
                    android:layout_margin="10dp"
                    android:id="@+id/product_name_label"
                    android:textColor="@color/black"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/edit_product_name_text"
                    android:layout_marginLeft="80dp"
                    android:textSize="10dp"
                    android:textAlignment="center"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/shape_text_entry"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:id="@+id/expected_date_layout"
                android:layout_below="@+id/product_name_layout"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Expected Product Launch Date : "
                    android:textSize="10dp"
                    android:layout_margin="10dp"
                    android:id="@+id/expected_date_label"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/edit_expected_date_text"
                    android:textSize="10dp"
                    android:text="00-00-2018"
                    android:textColor="@color/colorPrimary"
                    android:textAlignment="center"
                    android:layout_marginRight="20dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/expected_date_layout"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Expected Product Launch Price : "
                    android:textSize="10dp"
                    android:layout_margin="10dp"
                    android:id="@+id/expected_price"
                    android:textColor="@color/black"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/edit_expected_price_text"
                    android:layout_marginLeft="150dp"
                    android:textSize="10dp"
                    android:textAlignment="center"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/shape_text_entry"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="bottom">
            <Button
                android:layout_width="125dp"
                android:layout_height="25dp"
                android:textColor="@color/color_white"
                android:backgroundTint="@color/colorPrimary"
                android:background="@drawable/shape"
                android:textAllCaps="false"
                android:layout_centerVertical="true"
                android:id="@+id/edit_button"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:text="Update"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>