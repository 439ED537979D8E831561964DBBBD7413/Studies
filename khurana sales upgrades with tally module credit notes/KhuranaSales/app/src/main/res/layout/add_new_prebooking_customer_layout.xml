<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#C000"
    android:visibility="invisible"
    android:id="@+id/add_new_prebooking_customer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="20dp">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="55dp">
                <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                    android:id="@+id/customer_prebooking_layout">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:id="@+id/layout_new_prebooking_title"
                    android:layout_height="45dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="New Pre-Booking"
                        android:textColor="@color/black"
                        android:textSize="10dp"
                        android:layout_margin="10dp"/>
                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/ic_delete"
                        android:id="@+id/back_add_new_prebooking_customer"
                        android:layout_alignParentRight="true"
                        android:layout_margin="10dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_below="@+id/layout_new_prebooking_title"
                    android:layout_marginTop="10dp"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/customer_name_layout"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="10dp"
                        android:text="Customer Name :  "
                        android:layout_marginLeft="10dp"/>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="90dp"
                            android:id="@+id/customer_name_search_text"
                            android:textSize="10dp"
                            android:layout_marginRight="20dp"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_below="@+id/customer_name_layout"
                        android:id="@+id/customer_mobile_number_layout"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="10dp"
                            android:text="Customer Contact Number :  "
                            android:layout_marginLeft="10dp"/>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="90dp"
                            android:id="@+id/customer_mobile_text"
                            android:textSize="10dp"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/customer_mobile_number_layout"
                        android:id="@+id/customer_address_layout"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="10dp"
                            android:text="Customer Contact Address :  "
                            android:layout_marginLeft="10dp"/>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="90dp"
                            android:layout_marginRight="20dp"
                            android:id="@+id/customer_address_text"
                            android:textSize="10dp"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/customer_address_layout"
                        android:id="@+id/customer_booking_amount_layout"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="10dp"
                            android:text="Customer Booking Amount :  "
                            android:layout_marginLeft="10dp"/>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="90dp"
                            android:layout_marginRight="20dp"
                            android:text="0"
                            android:inputType="number"
                            android:id="@+id/booking_amount_text"
                            android:textSize="10dp"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/customer_booking_amount_layout"
                        android:id="@+id/customer_otp_layout"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="10dp"
                            android:text="Customer OTP :  "
                            android:layout_marginLeft="10dp"/>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="90dp"
                            android:layout_marginRight="20dp"
                            android:inputType="number"
                            android:id="@+id/customer_otp_text"
                            android:textSize="10dp"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_alignParentBottom="true"
                        android:id="@+id/customer_otp_remaining_time_layout"
                        android:layout_below="@+id/customer_otp_layout"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10dp"
                            android:layout_centerVertical="true"
                            android:id="@+id/remaining_otp_label"
                            android:textColor="@color/black"
                            android:text="Remaining time for Otp: "/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:textSize="12dp"
                            android:id="@+id/otp_remaining_time"
                            android:textColor="@color/black"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/remaining_otp_label"
                            />
                    </RelativeLayout>
                </RelativeLayout>
                </RelativeLayout>
            </ScrollView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
           <RelativeLayout
               android:layout_width="match_parent"
               android:gravity="bottom"
               android:layout_alignParentBottom="true"
               android:layout_height="55dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_height="wrap_content"
                    android:text="Verify OTP"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:id="@+id/verify_otp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/colorPrimary"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Send OTP"
                    android:textSize="12dp"
                    android:id="@+id/send_otp"
                    android:layout_centerInParent="true"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/red"/>
                <Button
                    android:layout_weight="1"
                    android:layout_width="105dp"
                    android:layout_height="25dp"
                    android:background ="@drawable/shape"
                    android:backgroundTint="@color/colorPrimary"
                    android:text="Confirm"
                    android:textSize="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textAllCaps="false"
                    android:id="@+id/confirm_booking"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/color_white"/>
            </RelativeLayout>
           </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:id="@+id/ledger_search_recycler_layout"
                android:visibility="invisible"
                android:layout_marginLeft="90dp"
                android:layout_marginRight="20dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="10dp"
                android:layout_marginTop="110dp">
                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:id="@+id/ledger_search_recycler"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp">
                </android.support.v7.widget.RecyclerView>
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>