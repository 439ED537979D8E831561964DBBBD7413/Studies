<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp"
        android:layout_marginBottom="@dimen/cardMarginVertical"
        android:layout_marginLeft="@dimen/cardMarginHorizontal"
        android:layout_marginRight="@dimen/cardMarginHorizontal"
        android:layout_marginTop="@dimen/cardMarginVertical"
        app:cardPreventCornerOverlap="false"
        app:contentPadding="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:id="@+id/top_description_layout"
                android:weightSum="5"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ajhbdjasbdjasbdjhbjhbjhbjhbjbhjbhbjhbjhbhjbjbjasbdashjd"
                android:id="@+id/mobile_name"
                android:textSize="15dp"
                android:layout_weight="3"
                android:layout_marginLeft="15dp"
                />
            <TextView
                android:layout_width="95dp"
                android:id="@+id/stock"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="QT(25)"
                android:textSize="12dp"
                android:layout_marginLeft="5dp"
                android:layout_alignParentRight="true"/>
            <ImageView
                android:layout_width="35dp"
                android:layout_weight="2"
                android:layout_height="35dp"
                android:id="@+id/pencil"
                android:layout_alignParentRight="true"
                android:background="@drawable/pencil"
                />
            </LinearLayout>
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/done"
                android:visibility="invisible"
                android:layout_marginTop="15dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/tick"
                />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/mrp"
               android:background="@drawable/tag"
                android:layout_margin="10dp"
                android:layout_below="@+id/top_description_layout"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:id="@+id/mrp_price"
                android:layout_marginLeft="75dp"
               android:textSize="15dp"
                android:text="1000/-"
            android:layout_marginTop="10dp"
                android:layout_below="@+id/top_description_layout"
             />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:layout_below="@+id/top_description_layout"
                android:text="(M.R.P)"
                android:fontFamily="serif-monospace"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/mrp_price"
                android:layout_alignParentRight="true"
                android:textColor="@color/red"
                />
            <EditText
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:visibility="invisible"
                android:textColor="#000000"
                android:id="@+id/edit_mrp"
                android:layout_below="@+id/top_description_layout"
                android:layout_marginLeft="235dp"
                />
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/mop"
                android:background="@drawable/tag"
                android:layout_margin="10dp"
                android:layout_below="@+id/mrp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:id="@+id/mop_price"
                android:layout_marginLeft="75dp"
                android:textSize="15dp"
                android:text="1000/-"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/mrp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mrp"
               android:paddingLeft="10dp"
                android:text="(M.O.P)"
                android:fontFamily="serif-monospace"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/mop_price"
                android:layout_alignParentRight="true"
                android:textColor="@color/red"
                />
            <EditText
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:id="@+id/edit_mop"
                android:inputType="number"
                android:textColor="#000000"
                android:layout_below="@+id/mrp"
                android:visibility="invisible"
                android:layout_marginLeft="235dp"
                />
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/khu"
                android:layout_margin="10dp"
                android:id="@+id/ks_price_image"
                android:layout_below="@+id/mop"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:id="@+id/ks_price"
                android:layout_marginLeft="75dp"
                android:textSize="15dp"
                android:text="1000/-"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/mop"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mop"
                android:text="(KS.Price)"
                android:id="@+id/ks_price_title"
                android:fontFamily="serif-monospace"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:layout_toRightOf="@+id/ks_price"
                android:layout_alignParentRight="true"
                android:textColor="@color/red"
                />
            <EditText
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:id="@+id/edit_ksprice"
               android:inputType="number"
                android:textColor="#000000"
                android:visibility="invisible"
                android:layout_below="@+id/mop"
                android:layout_marginLeft="235dp"
                />
            <ImageView
                android:layout_width="15dp"
               android:layout_below="@+id/edit_ksprice"
               android:layout_marginLeft="16dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/like"
                android:id="@+id/like_star"
                android:visibility="visible"
                android:layout_marginTop="5dp"
                android:layout_height="15dp"/>
            <ImageView
                android:layout_width="15dp"
                android:layout_below="@+id/edit_ksprice"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/empty_star_like"
                android:id="@+id/unlike_star"
                android:visibility="visible"
                android:layout_marginTop="5dp"
                android:layout_height="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ks_price"
                android:text="Add This To Offers"
                android:id="@+id/add_to_offers"
                android:fontFamily="serif-monospace"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
              android:gravity="right"
                android:layout_toRightOf="@+id/ks_price"
                android:layout_alignParentRight="true"
                android:textColor="@color/red"
                />
         </RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>