<?xml version="1.0" encoding="utf-8"?>
 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:visibility="invisible"
    android:clickable="true"
    android:layout_width="match_parent"
    android:id="@+id/select_payment_type_export_layout"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="6dp"
            app:cardElevation="10dp"
            android:layout_height="420dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/top_bar_layout"
                android:layout_height="45dp"
                android:background="#1976D2">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/down_arrow_type_select_payment_export"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_down_arrow"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:layout_centerInParent="true"
                    android:textColor="@color/color_white"
                    android:text="Select Payment Type"/>
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:id="@+id/select_all_export_payment"
                    android:src="@drawable/ic_select_all"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/recycler_layout"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="2dp"
                android:layout_marginBottom="55dp"
                android:layout_height="wrap_content">
                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/recycler_payment_type">
                </android.support.v7.widget.RecyclerView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:layout_height="55dp">
                <Button
                    android:layout_width="145dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:textAllCaps="false"
                    android:id="@+id/payment_selected_export_button"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_white"
                    android:text="Export"
                    android:backgroundTint="@color/colorPrimary"
                    android:background="@drawable/shape"/>
                <Button
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="20dp"
                    android:id="@+id/payment_selected_export_share_button"
                    android:layout_marginLeft="30dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/share_payment_button_icon"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</RelativeLayout>