<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:visibility="invisible"
    android:id="@+id/write_notification_layout"
    android:layout_width="match_parent"
    android:background="#7000"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        app:cardElevation="20dp"
        android:layout_below="@+id/tool_bar"
        app:cardCornerRadius="10dp"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:layout_height="45dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_white"
                android:textSize="20dp"
                android:layout_centerInParent="true"
                android:text="Message"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:id="@+id/back_message"
                android:src="@drawable/ic_back_arrow_white"
                android:layout_height="30dp" />
        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="55dp"
            android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:id="@+id/title_layout"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:textColor="@color/black"
                    android:text="Title: "/>
                <EditText
                    android:layout_width="match_parent"
                    android:textSize="10dp"
                    android:id="@+id/title"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_height="wrap_content"
                    android:hint="Title"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:id="@+id/message_layout"
                android:layout_below="@+id/title_layout"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:textColor="@color/black"
                    android:text="Message: "/>
                <EditText
                    android:layout_width="match_parent"
                    android:textSize="10dp"
                    android:id="@+id/message"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:hint="message"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:id="@+id/notification_type_spinner"
                android:layout_below="@+id/message_layout"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:textColor="@color/black"
                    android:text="Notification Type: "/>
                <Spinner
                    android:id="@+id/type_selection_spinner"
                    android:layout_width="195dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:id="@+id/product_name_layout"
                android:layout_below="@+id/notification_type_spinner"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:textColor="@color/black"
                    android:text="Product Name: "/>
                <EditText
                    android:layout_width="match_parent"
                    android:textSize="10dp"
                    android:id="@+id/product_name"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:hint="Search Name .."/>
                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:elevation="5dp"
                    android:layout_marginLeft="15dp"
                    android:background="@color/color_white"
                    android:layout_marginBottom="55dp"
                    android:layout_marginRight="20dp"
                    android:id="@+id/search_name_recycler"
                    android:layout_below="@+id/product_name"
                    android:layout_height="255dp">
                </android.support.v7.widget.RecyclerView>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:background="@color/color_white"
            android:layout_height="55dp">
            <Button
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:textColor="@color/color_white"
                android:text="Send"
                android:id="@+id/send_notificaton"
                android:textSize="10dp"
                android:background="@drawable/shape"
                android:backgroundTint="@color/colorPrimary"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
