<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:visibility="invisible"
    android:background="#7000"
    android:elevation="10dp"
    android:id="@+id/new_address_layout"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v7.widget.CardView
        android:id="@+id/card_view1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:elevation="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="65dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="40dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:layout_height="45dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Address"
                android:id="@+id/title_lable"
                android:layout_centerInParent="true"
                android:textColor="@color/color_white"
                android:textSize="15dp"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:id="@+id/back_address_entry"
                android:src="@drawable/ic_back_arrow_white"
                android:layout_height="30dp" />
        </RelativeLayout>
        <ScrollView
            android:layout_marginTop="65dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:scrollbars="none"
            android:layout_marginBottom="55dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <RelativeLayout
                    android:id="@+id/address_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Build/Office/Shop Name :"/>

                    <AutoCompleteTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Building / Office / Shop Name"
                        android:layout_margin="25dp"
                        android:textSize="10dp"
                        android:fontFamily="sans-serif-condensed"
                        android:textAlignment="viewStart"
                        android:gravity="start"
                        android:id="@+id/name_address"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_below="@id/address_name"
                    android:id="@+id/address_pincode"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Area | Pincode :"/>

                    <AutoCompleteTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Pincode"
                        android:layout_margin="25dp"
                        android:textSize="10dp"
                        android:fontFamily="sans-serif-condensed"
                        android:textAlignment="viewStart"
                        android:gravity="start"
                        android:id="@+id/pincode_address"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:id="@+id/address_city"
                    android:layout_below="@id/address_pincode"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="City:"/>

                    <AutoCompleteTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="City"
                        android:layout_margin="25dp"
                        android:textSize="10dp"
                        android:fontFamily="sans-serif-condensed"
                        android:textAlignment="viewStart"
                        android:gravity="start"
                        android:id="@+id/city_address"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:id="@+id/address_state"
                    android:layout_below="@id/address_city"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="State:"/>

                    <AutoCompleteTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="state"
                        android:layout_margin="25dp"
                        android:textSize="10dp"
                        android:fontFamily="sans-serif-condensed"
                        android:textAlignment="viewStart"
                        android:gravity="start"
                        android:id="@+id/state_address"
                        />
                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:background="@color/color_white"
            android:layout_height="55dp">
            <Button
                android:layout_width="125dp"
                android:layout_height="25dp"
                android:id="@+id/address_entry_done"
                android:background="@drawable/shape"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@color/color_white"
                android:layout_alignParentRight="true"
                android:layout_marginRight="35dp"
                android:layout_centerVertical="true"
                android:text="Submit"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>