<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background1">
        <RelativeLayout
            android:id="@+id/rel1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content"
                android:text="Welcome !"
                android:fontFamily="sans-serif"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:textColor="#ffffff"
                android:padding="5dp"
                android:textSize="20dp"
                android:id="@+id/icon"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel2"
            android:gravity="bottom"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/email_view"
                android:layout_width="20dp"
                android:src="@drawable/ic_email_login_screen"
                android:layout_height="20dp"
                android:layout_marginLeft="25dp"
                />
            <AutoCompleteTextView
                android:id="@+id/email"
                android:layout_below="@+id/email_view"
                android:layout_width="380dp"
                android:hint="Email"
                android:textColorHint="#ffffff"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_height="45dp"
                android:textSize="12dp"
                android:textColorHighlight="@color/colorPrimary"
                android:layout_centerHorizontal="true"/>
            <ImageView
                android:id="@+id/password_view"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@id/email"
               android:src="@drawable/ic_password_login_screen"
                android:layout_marginLeft="25dp"
                />
            <AutoCompleteTextView
                android:inputType="textPassword"
                android:id="@+id/password"
                android:hint="Password"
                android:textColorHint="#ffffff"
                android:layout_below="@+id/password_view"
                android:layout_width="380dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColorHighlight="@color/colorPrimary"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/rel2">
        <ImageView
            android:id="@+id/login"
            android:src="@drawable/right_arrow_login_screen"
            android:layout_width="match_parent"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_height="40dp" />
        <TextView
            android:id="@+id/signup"
            android:layout_below="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't Have Account ? Register!"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textColor="#ffffff"
            android:textSize="8dp"
            android:fontFamily="serif"
            android:layout_marginLeft="20dp"
            />
    </RelativeLayout>
 <ProgressBar
    android:id="@+id/progress"
    android:layout_width="200dp"
    android:visibility="invisible"
    android:layout_height="60dp"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="200dp"/>
</RelativeLayout>
</RelativeLayout>
