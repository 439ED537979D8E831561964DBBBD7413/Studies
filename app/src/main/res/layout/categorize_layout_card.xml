<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:background="@color/cyan"
            android:layout_width="match_parent"
            android:id="@+id/relative_layout_card_categorize"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                android:textColor="#ffffff"
               android:layout_marginLeft="10dp"
                android:layout_marginRight="135dp"
                android:text="Buy More Save More"
                android:id="@+id/sub_category_name"/>
            <TextView
                android:layout_below="@+id/sub_category_name"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:textSize="10dp"
                android:textColor="#ffffff"
                android:layout_marginRight="125dp"
                android:text="Buy more of these products to add more discount to your cart"
                android:layout_height="wrap_content"
                android:id="@+id/sub_category_desc"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="15dp"
                android:id="@+id/category_text"
                android:gravity="center"
                android:text="View accessories ->"
                android:textColor="#ffffff"
                android:textSize="12dp" />

            <ImageView
                android:id="@+id/image_background_card_categorize"
                android:layout_width="125dp"
                android:scaleType="fitXY"
                android:layout_alignParentRight="true"
                android:layout_height="120dp"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>