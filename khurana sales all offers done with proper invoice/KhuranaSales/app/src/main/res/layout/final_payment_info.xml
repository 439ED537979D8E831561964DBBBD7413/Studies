<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7000"
    android:visibility="invisible"
    android:id="@+id/order_confirmation_layout"

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:elevation="10dp"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:layout_height="45dp">
            <TextView
                android:layout_width="wrap_content"
                android:text="Order Confirmation"
                android:textSize="20dp"
                android:textColor="@color/color_white"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:id="@+id/back_order_confirmation"
                android:src="@drawable/ic_back_arrow_white"
                android:layout_height="30dp" />
        </RelativeLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_marginTop="65dp"
                android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/cash"
                        android:layout_height="35dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginLeft="40dp"
                        android:text="0 /-"
                        android:id="@+id/cash_amount_confirm"
                        android:textSize="10dp"
                        android:layout_marginRight="20dp"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/credit_card"
                        android:layout_height="35dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginLeft="40dp"
                        android:textSize="10dp"
                        android:text="0 /-"
                        android:id="@+id/card_amount_confirm"
                        android:layout_marginRight="20dp"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/cheque"
                        android:layout_height="35dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginLeft="40dp"
                        android:textSize="10dp"
                        android:text="0 /-"
                        android:textColor="@color/black"
                        android:id="@+id/cheque_amount_confirm"
                        android:layout_marginRight="20dp"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/bank"
                        android:layout_height="35dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginLeft="40dp"
                        android:textSize="10dp"
                        android:textColor="@color/black"
                        android:text="0 /-"
                        android:layout_marginRight="20dp"
                        android:id="@+id/finance_amount_confirm"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/paytm"
                        android:layout_height="35dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginLeft="40dp"
                        android:textSize="10dp"
                        android:text="0 /-"
                        android:textColor="@color/black"
                        android:layout_marginRight="20dp"
                        android:id="@+id/paytm_amount_confirm"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/credit_balance_payment"
                        android:layout_height="35dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginLeft="40dp"
                        android:textSize="10dp"
                        android:text="0 /-"
                        android:textColor="@color/black"
                        android:layout_marginRight="20dp"
                        android:id="@+id/credit_amount_confirm"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            </ScrollView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/color_white"
                android:layout_alignParentBottom="true"
                android:layout_height="55dp">
                <TextView
                    android:layout_width="125dp"
                    android:id="@+id/total_amount_confirm"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25dp"
                    android:textSize="25dp"
                    android:textColor="@color/colorPrimary"
                    android:text="2000"
                    android:layout_height="wrap_content" />
                <Button
                    android:layout_width="125dp"
                    android:layout_height="25dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:text="Confirm"
                    android:id="@+id/confirm_order"
                    android:textColor="@color/color_white"
                    android:background="@drawable/shape"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="35dp"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>