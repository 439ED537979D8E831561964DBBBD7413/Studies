<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/card_view1"
        android:layout_below="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp"
        android:layout_margin="5dp"
        app:cardElevation="2dp"
        app:cardPreventCornerOverlap="false"
        app:contentPadding="0dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/desc1"
                android:layout_margin="15dp"/>
            <ImageView
                android:layout_width="35dp"
                android:id="@+id/im1"
                android:layout_height="35dp"
                android:layout_margin="10dp"
                android:layout_below="@+id/desc1"
                android:background="@drawable/rupee1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ksprice"
                android:layout_below="@+id/desc1"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="18dp"
                android:textStyle="bold"
                android:textSize="15dp"
                android:fontFamily="serif-monospace"
                android:text="12000/-"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mrp1"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/desc1"
                android:layout_marginTop="18dp"
                android:layout_marginRight="35dp"
                android:textStyle="bold"
                android:textColor="@color/red"
                android:textSize="15dp"
                android:fontFamily="serif-monospace"
                android:text="(Price)"


                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/b1"
                android:layout_below="@+id/mrp1"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="20dp"
               android:layout_alignParentLeft="true"
                android:textStyle="bold"
                android:textSize="18dp"
                android:fontFamily="serif-monospace"
                android:text="Units Bought:"
               />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bought"
                android:layout_toRightOf="@+id/b1"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/mrp1"
                android:layout_marginTop="27dp"
                android:layout_marginLeft="45dp"
                android:textStyle="bold"
                android:textSize="15dp"
                android:fontFamily="serif-monospace"
                android:text="25 Units"


                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/b1"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="15dp"
                android:textStyle="bold"
                android:textSize="18dp"
                android:fontFamily="serif-monospace"
                android:text="Total Payment:"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/total"
               android:layout_toRightOf="@+id/b1"
                android:layout_marginLeft="45dp"
                android:layout_below="@+id/bought"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textSize="15dp"
                android:fontFamily="serif-monospace"
                android:text="12000 /-"
                />
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_below="@+id/total"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/display_imei"
                android:src="@drawable/imei"

                />
    </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>