<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/payment_card"
        android:layout_margin="15dp"
        android:background="@color/color_white"
        app:cardCornerRadius="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/colorPrimary">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Credit Payment Details"
                android:textColor="@color/color_white"
                android:textSize="15dp" />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_delete_white"
                android:id="@+id/close_credit"
                android:layout_margin="5dp"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_marginTop="40dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:id="@+id/financer_name_layout"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:layout_margin="10dp"
                        android:textColor="@color/colorPrimary"
                        android:id="@+id/label"
                        android:text="Customer Name: "/>
                    <EditText
                        android:layout_width="match_parent"
                        android:id="@+id/customer_name"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginLeft="10dp"
                        android:textColorHint="@color/colorPrimary"
                        android:hint="Ankush Khurana"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/label"
                        android:textSize="10dp"
                        android:layout_height="wrap_content"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="40dp"
                    android:layout_below="@+id/financer_name_layout"
                    android:id="@+id/finance_amount_layout"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:layout_margin="10dp"
                        android:textColor="@color/colorPrimary"
                        android:text="Customer Phone: "/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="25dp"
                        android:textSize="10dp"
                        android:id="@+id/customer_phone"
                        android:inputType="number"
                        android:layout_marginBottom="20dp"
                        android:layout_height="wrap_content"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/finance_amount_layout"
                    android:id="@+id/finance_processing_payment_amount_layout"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:layout_margin="10dp"
                        android:textColor="@color/colorPrimary"
                        android:text="Credit Amount"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="25dp"
                        android:id="@+id/credit_amount"
                        android:inputType="number"
                        android:textSize="10dp"
                        android:layout_marginBottom="20dp"
                        android:layout_height="wrap_content"
                        />

                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/color_white"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="20dp"
        android:visibility="invisible"
        android:layout_marginTop="100dp">
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:id="@+id/recycler_view_credit_customer"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
    </android.support.v7.widget.CardView>
</RelativeLayout>